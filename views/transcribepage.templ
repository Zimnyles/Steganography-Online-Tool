templ TranscribePageScript() {
    <script>
        document.getElementById('imageInput').addEventListener('change', function (e) {
            const label = this.parentElement;
            const span = label.querySelector('span');

            if (this.files.length > 0) {                                       
                label.classList.remove('file-upload-button');
                label.classList.add('file-upload-button--loaded');
                span.textContent = '–§–∞–π–ª –∑–∞–≥—Ä—É–∂–µ–Ω, –Ω–∞–∂–º–∏—Ç–µ —Å–Ω–æ–≤–∞, –µ—Å–ª–∏ —Ö–æ—Ç–∏—Ç–µ –≤—ã–±—Ä–∞—Ç—å –¥—Ä—É–≥–æ–µ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ';
            } else {
                label.classList.add('file-upload-button');
                label.classList.remove('file-upload-button--loaded');
                span.textContent = '–ù–∞–∂–º–∏—Ç–µ, —á—Ç–æ–±—ã –≤—ã–±—Ä–∞—Ç—å —Ñ–æ—Ç–æ';
            }
        });

        // –î–æ–±–∞–≤–ª—è–µ–º –æ–±—Ä–∞–±–æ—Ç—á–∏–∫ —Å–æ–±—ã—Ç–∏—è after-request –¥–ª—è —Å–±—Ä–æ—Å–∞ —Å—Ç–∏–ª—è –∫–Ω–æ–ø–∫–∏
        document.addEventListener('htmx:afterRequest', function(evt) {
            if (evt.detail.successful && evt.detail.requestConfig.path === '/api/createtranscribe') {
                const label = document.querySelector('.file-upload-button--loaded');
                if (label) {
                    const span = label.querySelector('span');
                    label.classList.remove('file-upload-button--loaded');
                    label.classList.add('file-upload-button');
                    span.textContent = '–ù–∞–∂–º–∏—Ç–µ, —á—Ç–æ–±—ã –≤—ã–±—Ä–∞—Ç—å —Ñ–æ—Ç–æ';
                    
                    // –¢–∞–∫–∂–µ —Å–±—Ä–∞—Å—ã–≤–∞–µ–º –∑–Ω–∞—á–µ–Ω–∏–µ input file
                    const fileInput = document.getElementById('imageInput');
                    fileInput.value = '';
                }
            }
        });    
    </script>
}